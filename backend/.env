# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Configurações do Banco de Dados
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zapchat_tur
DB_USER=postgres
DB_PASSWORD=password
DB_DIALECT=sqlite
DB_STORAGE=./database/zapchat_tur.sqlite
DB_RECREATE_FORCE=false
DB_CREATE_DEVINFO=false

# Configurações JWT
JWT_SECRET=sua_chave_secreta_muito_segura_aqui_123456789
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=sua_chave_refresh_secreta_aqui_987654321
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de Segurança
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=900000

# Configurações CORS
CORS_ORIGIN=http://localhost:5173

# Configurações de Log
LOG_LEVEL=info

