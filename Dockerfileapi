# Estágio de construção
FROM node:20-alpine AS builder

# Dependências do sistema
RUN apk add --no-cache openssl openssl-dev lz4-libs lz4-dev musl-dev

WORKDIR /app

# Copiar arquivos de configuração
COPY backend/package*.json ./

# Instalar dependências
RUN npm ci

# Copiar código-fonte e variáveis de ambiente
COPY backend/src ./src
COPY backend/.env ./


# Estágio de produção
FROM node:20-alpine

# Dependências do sistema
RUN apk add --no-cache openssl lz4-libs

WORKDIR /app

# Copiar o necessário do estágio builder
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package*.json ./
COPY --from=builder /app/src ./src
COPY --from=builder /app/.env ./

# Criar diretório para o banco de dados
RUN mkdir -p ./database && \
    chown -R node:node /app && \
    chmod -R 755 /app

# Definir variáveis de ambiente padrão
ENV PORT=3001 \
    DATABASE_URL="file:/app/database/database.sqlite" \
    NODE_ENV="production"

USER node

EXPOSE 3001

# Comando para iniciar o servidor
CMD npm start
